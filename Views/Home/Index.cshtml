@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Banner alternativo: sobrio y profesional */
    .dashboard-banner-alt {
        display: flex;
        align-items: center;
        gap: 1.5rem;
        background: #f6f9fc;
        border-left: 6px solid #805ad5;
        border-radius: 0.75rem;
        padding: 1.75rem 2rem;
        max-width: 850px;
        margin: 2.5rem auto 1rem auto;
        box-shadow: 0 2px 8px rgba(128,90,213,0.07);
    }
    .dashboard-banner-alt .banner-icon {
        flex-shrink: 0;
        background: #805ad5;
        color: #fff;
        font-size: 2.7rem;
        border-radius: 100%;
        width: 3.4rem;
        height: 3.4rem;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 0 0 7px #ede9fe;
    }
    .dashboard-banner-alt .banner-content {
        text-align: left;
    }
    .dashboard-banner-alt .banner-title {
        font-size: 1.35rem;
        font-weight: 700;
        color: #473088;
        margin-bottom: 0.3rem;
    }
    .dashboard-banner-alt .banner-desc {
        font-size: 1.08rem;
        color: #453d57;
        font-weight: 400;
        line-height: 1.5;
    }
    @@media (max-width: 600px) {
        .dashboard-banner-alt {
            flex-direction: column;
            text-align: center;
            gap: 0.8rem;
            padding: 1.2rem;
        }
        .dashboard-banner-alt .banner-content {
            text-align: center;
        }
    }
</style>

<div class="dashboard-widgets">
    <a href="/Statistics/Users" class="dashboard-widget">
        <div class="widget-title">
            <i class="fa-solid fa-users me-1"></i> Usuarios
        </div>
        <div class="widget-value">@ViewBag.Usuarios</div>
    </a>

    <a href="/Statistics/Transaction" class="dashboard-widget">
        <div class="widget-title">
            <i class="fa-solid fa-receipt me-1"></i> Transacciones
        </div>
        <div class="widget-value">@ViewBag.Transacciones</div>
    </a>

    <a href="/Statistics/Offers" class="dashboard-widget">
        <div class="widget-title">
            <i class="fa-solid fa-gift me-1"></i> Ofertas activas
        </div>
        <div class="widget-value">@ViewBag.OfertasActivas</div>
    </a>

    <a href="/Statistics/Points" class="dashboard-widget">
        <div class="widget-title">
            <i class="fa-solid fa-coins me-1"></i> Puntos canjeados
        </div>
        <div class="widget-value">@ViewBag.PuntosCanjeados</div>
    </a>
</div>

<div class="dashboard-banner-alt">
    <div class="banner-icon">
        <i class="fa-solid fa-gas-pump"></i>
    </div>
    <div class="banner-content">
        <div class="banner-title">
            Plataforma de fidelización multi-tenant para estaciones de servicio de Uruguay
        </div>
        <div class="banner-desc">
            Gestiona puntos, promociones y verificaciones de identidad de forma centralizada y escalable.
        </div>
    </div>
</div>
